{
    "extends": [
      "config:base"
    ],
    "regexManagers": [
      {
        "fileMatch": ["^.github/workflows/.*\\.yml$"],
        "matchStrings": [
          "image:\\s*python:(?<currentValue>\\d+\\.\\d+)"
        ],
        "depNameTemplate": "python",
        "datasourceTemplate": "docker",
        "versioningTemplate": "docker"
      }
    ],
    "packageRules": [
      {
        "matchPackageNames": ["python"],
        "matchDatasources": ["docker"],
        "automerge": false
      }
    ]
  }