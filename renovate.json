{
    "extends": [
      "config:base"
    ],
    "regexManagers": [
      {
        "fileMatch": [".github/workflows/.*\\.yml$"],
        "matchStrings": [
          "image: python:(?<currentValue>[0-9]+\\.[0-9]+)"
        ],
        "depNameTemplate": "python",
        "datasourceTemplate": "docker",
        "versioningTemplate": "docker"
      }
    ],
    "packageRules": [
      {
        "matchPackageNames": ["python"],
        "matchDatasources": ["docker"],
        "automerge": false
      }
    ]
  }